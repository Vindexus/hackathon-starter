nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
  a.navbar-brand(href='/')
    i.fas.fa-dollar-sign.mr-2
    | Project name
  button.navbar-toggler.navbar-toggler-right(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
    span.navbar-toggler-icon

  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item(class=(title === 'Home') ? 'active' : undefined)
        a.nav-link(href='/') Home
      li.nav-item(class=(title === 'API Examples') ? 'active' : undefined)
        a.nav-link(href='/api') API Examples
      li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
        a.nav-link(href='/contact') Contact
      li.nav-item
        a.nav-link(href='/status') Status
    ul.navbar-nav.navbar-right
      if !user
        li(class=(title === 'Login') ? 'active' : undefined)
          a(href='/login') Login
        li(class=(title === 'Create Account') ? 'active' : undefined)
          a(href='/signup') Create Account
      else
        li.nav-item.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
          a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown' id="navbar-dropdown" role="button" aria-haspopup="true" aria-expanded="false")
            if user.profile.picture
              img(src=user.profile.picture)
            else
              img(src=user.gravatar(60))
            span= user.profile.name || user.email || user.id
            i.caret
          .dropdown-menu(aria-labelledby="navbar-dropdown")
            a.dropdown-item(href='/account') My Account
            .dropdown-divider
            a.dropdown-item(href='/logout') Logout
